<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wordle">

    <TextView
        android:id="@+id/wordle_header"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:text="@string/Wordle_header"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <EditText
        android:id="@+id/wordle_0"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="144dp"
        android:text="@string/Wordle_input_placeholder"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/wordle_1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/Wordle_input_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/wordle_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordle_0"
        app:layout_constraintVertical_bias="0.08" />

    <EditText
        android:id="@+id/wordle_2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/Wordle_input_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/wordle_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordle_0"
        app:layout_constraintVertical_bias="0.363" />

    <EditText
        android:id="@+id/wordle_3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="@string/Wordle_input_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/wordle_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordle_0"
        app:layout_constraintVertical_bias="0.647" />

    <EditText
        android:id="@+id/wordle_4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/Wordle_input_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/wordle_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordle_0"
        app:layout_constraintVertical_bias="0.929" />

    <EditText
        android:id="@+id/wordle_5"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="44dp"
        android:text="@string/Wordle_input_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/wordle_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/wordle_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:text="@string/wordle_submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordle_header"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>